    <img src="/images/gallery/10 1.png" alt="gallery" class:list={[image_classes, "hidden md:block col-span-4"]} />
    <img src="/images/gallery/11 1.png" alt="gallery" class:list={[image_classes, "col-span-8 md:col-span-3"]} />
    <img src="/images/gallery/12 4.png" alt="gallery" class:list={[image_classes, "col-span-5 md:col-span-3"]} />

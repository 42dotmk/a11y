  <div class="grid grid-cols-12 md:grid-cols-11 gap-4">
    <img src="/images/gallery/3 2.png" alt="gallery" class:list={[image_classes, "col-span-4 md:col-span-4"]} />
    <img src="/images/gallery/6 1.png" alt="gallery" class:list={[image_classes, "col-span-4 md:col-span-3"]} />
    <img src="/images/gallery/7 1.png" alt="gallery" class:list={[image_classes, "col-span-4 md:col-span-4"]} />
